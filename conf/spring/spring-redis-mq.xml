	<bean id="jedisConnectionFactoryMq" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
		<property name="hostName" value="${redis.mq.host}" />
		<property name="port" value="${redis.mq.port}" />
		<property name="timeout" value="${redis.timeout}" />
		<property name="usePool" value="true" />
		<constructor-arg index="0" ref="redisPoolMq"/>
	</bean>

	<bean id="redisTemplateMq" class="org.springframework.data.redis.core.StringRedisTemplate">
		<property name="connectionFactory" ref="jedisConnectionFactoryMq" />
	</bean>

</beans>
