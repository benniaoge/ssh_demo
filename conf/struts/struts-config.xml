<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	
	<constant name="struts.convention.action.mapAllMatches" value="true" />
	<constant name="struts.convention.default.parent.package" value="struts-config" />
	<constant name="struts.convention.action.packages" value="com.emar.ebox.action" />
	<constant name="struts.convention.result.path" value="/" />

	<package name="struts-config" extends="struts-default" namespace="/">
	    
	    <result-types>
	        <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
	    </result-types>
		
		<interceptors>
			<interceptor name="exception" class="com.emar.core.struts.interceptor.ExceptionCatcherInterceptor" />
			<interceptor name="preloading" class="com.emar.core.struts.interceptor.PreloadingInterceptor" />
			<interceptor name="search" class="com.emar.core.struts.interceptor.SearchInterceptor" />
			<interceptor name="searchCleanUp" class="com.emar.core.struts.interceptor.SearchCriteriaCleanupInterceptor" />
			<interceptor name="myFileUpload" class="com.emar.core.struts.interceptor.MyFileUploadInterceptor" />
			<interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>

			<interceptor-stack name="eboxWebStack">
				<interceptor-ref name="exception" />
				<interceptor-ref name="autowiring" />
				<interceptor-ref name="servletConfig" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="i18n" />
				<interceptor-ref name="staticParams" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="searchCleanUp" />
				<interceptor-ref name="search" />
				<interceptor-ref name="preloading" />
				<interceptor-ref name="json"/>
				<interceptor-ref name="params">
					<param name="excludeParams">(eq|neq|gt|lt|geq|leq|like|in|orderby|groupby)\.\D*</param>
				</interceptor-ref>
				 
				<interceptor-ref name="conversionError" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="eboxWebStack" />

		<global-results>
			<result type="json" name="ajax_message">
			    <param name="root">errorStack</param>
			</result>
			<result name="system_error" type="redirect">/error.html</result>
		</global-results>
		
	</package>
		
</struts>
